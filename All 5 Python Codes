Pro 4 Normal Distribution Example (Quality Control)

import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import norm 

mean = 50
std_dev = 10

# Generate normal distribution samples
samples = np.random.normal(mean, std_dev, 1000)

# Plot histogram
plt.figure(figsize=(8, 6))
plt.hist(samples, bins=30, density=True, alpha=0.6)

# Plot theoretical normal PDF
x = np.linspace(mean - 4*std_dev, mean + 4*std_dev, 100)
plt.plot(x, norm.pdf(x, mean, std_dev), lw=2, label='Normal Distribution')

plt.title('Normal Distribution Example (Quality Control)')
plt.xlabel('Values')
plt.ylabel('Probability Density')
plt.legend()
plt.grid(True)
plt.show()

